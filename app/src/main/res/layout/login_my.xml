<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login_my">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bk_footer"
        android:elevation="@dimen/_5sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Pulse"
            android:textSize="@dimen/_30sdp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_20sdp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_350sdp"
        android:layout_marginTop="-45dp"
        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_5sdp"
        app:cardUseCompatPadding="true"
        >


        <TextView
            android:id="@+id/loginalready"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Login"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/_20sdp" />

        <com.google.android.material.textfield.TextInputLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_70sdp"
            android:textColorHint="@color/primaryTextColor">

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No"
            android:textSize="@dimen/_12sdp"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:inputType="phone|number"
            android:textColor="@color/black"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_125sdp"
            android:textColorHint="@color/primaryTextColor"
            app:passwordToggleEnabled="true">

            <EditText
                     android:id="@+id/password_login"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginHorizontal="@dimen/_15sdp"
                     android:layout_marginTop="@dimen/_125sdp"
                     android:hint="Password"
                     android:textSize="@dimen/_12sdp"
                     android:inputType="textPassword"
                     android:textColor="@color/black"
                     tools:ignore="InvalidId" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/_165sdp"
            android:text="Forgot Password?"
            android:layout_marginRight="@dimen/_16sdp"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/_13sdp" />

        <Button
            android:id="@+id/login"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_80sdp"
            android:background="@drawable/custom_button"
            android:text="Login"
            android:textSize="@dimen/_15sdp"
            android:enabled="false"
            android:textAllCaps="false"
            android:textColor="#50ffffff"
            tools:ignore="InvalidId" />

        <TextView
            android:id="@+id/signup"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_88sdp"
            android:layout_marginTop="@dimen/_260sdp"
            android:text="New User?Register"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/_13sdp"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>