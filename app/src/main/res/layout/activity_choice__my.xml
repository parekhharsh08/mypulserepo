<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Choice_my">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"
            android:background="@drawable/upload_file_design"
            android:elevation="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:text="My Pulse"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp" />
        </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_480sdp"
        app:cardElevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginTop="-50dp"
        android:padding="@dimen/_20sdp"

        app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="Your Choice?"
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/primaryTextColor"
        android:layout_marginTop="@dimen/_40sdp"
       android:gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_300sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_17sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:weightSum="2">

       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:weightSum="2"
           >

          <Button
                 android:layout_width="@dimen/_115sdp"
                 android:id="@+id/doctorbutton"
                 android:layout_marginTop="@dimen/_20sdp"
                 android:layout_weight="1"
                 android:background="@drawable/doctor_emoji"
                 android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="Doctor"
            android:layout_marginLeft="@dimen/_36sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/primaryTextColor"

            />
       </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/_20sdp"
            >
        <Button
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_24sdp"
            android:id="@+id/patientbutton"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_weight="1"
            android:background="@drawable/patient_emoji"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_17sdp"
            android:text="Patient"
            android:textColor="@color/primaryTextColor"
            android:textSize="@dimen/_20sdp"
             />


        </LinearLayout>

     </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>
